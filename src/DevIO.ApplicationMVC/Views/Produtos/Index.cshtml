@model IEnumerable<DevIO.ApplicationMVC.ViewModels.ProdutoViewModel>

@{
    ViewBag.Title = "Lista de Produtos";
}

<h2>@ViewBag.Title</h2>

<hr/>

<a class="btn btn-info" href="@Url.Action("Create", "Produtos")">
    Novo Produto
</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor( model => model.FornecedorId )
            </th>
            <th>
                @Html.DisplayNameFor( model => model.Nome )
            </th>
            <th>
                @Html.DisplayNameFor( model => model.Descricao )
            </th>
            <th>
                @Html.DisplayNameFor( model => model.Imagem )
            </th>
            <th>
                @Html.DisplayNameFor( model => model.Valor )
            </th>
            <th>
                @Html.DisplayNameFor( model => model.Ativo )
            </th>
            <th></th>
        </tr>
    </thead>
    
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor( modelItem => item.FornecedorId )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.Nome )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.Descricao )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.Imagem )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.Valor )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.Ativo )
            </td>
            <td class="text-right">
                <a class="btn btn-warning" href="@Url.Action("Edit", "Produtos", new {id = item.Id})"><span class="glyphicon glyphicon-search"></span></a>
                <a class="btn btn-info" href="@Url.Action("Details", "Produtos", new { id = item.Id })"><span class="glyphicon glyphicon-pencil"></span></a>
                <a class="btn btn-danger" href="@Url.Action("Delete", "Produtos", new {id = item.Id})"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }
</tbody>

</table>
